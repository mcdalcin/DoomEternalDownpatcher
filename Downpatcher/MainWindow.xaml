<Window x:Class="Downpatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Downpatcher"
        mc:Ignorable="d"
        Title="DOOM Eternal Steam Downpatcher" Height="350" Width="800">
    <Canvas>
        <Border BorderThickness="1" BorderBrush="#FF727272" Canvas.Left="10" Canvas.Top="10">
            <TextBlock Name="tbRootPath" TextTrimming="WordEllipsis" Width="400" Height="30" />
        </Border>
        <Border BorderThickness="1" BorderBrush="#FF727272" Padding="2,0,5,0" Canvas.Left="417" Canvas.Top="10">
            <TextBlock Name="tbVersion" TextTrimming="WordEllipsis" Height="30" Width="200" />
        </Border>
    </Canvas>
</Window>
